@model fashion.Data.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Custom_Layout.cshtml";
}


<main class="page-content">
    <div class="container">
        <h1>Edit</h1>

        <h4>Product</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-area="Admin" asp-controller="Products" asp-action="Edit" method="POST" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Img" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Abstract" class="control-label"></label>
                        <input asp-for="Abstract" class="form-control" />
                        <span asp-validation-for="Abstract" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Img" class="control-label"></label>
                        <input asp-for="Img" class="form-control" />
                        <span asp-validation-for="Img" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slug" class="control-label"></label>
                        <input asp-for="Slug" class="form-control" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    @* <div class="form-group">
                        <label asp-for="Deleted" class="control-label"></label>
                        <input asp-for="Deleted" class="form-control" />
                        <span asp-validation-for="Deleted" class="text-danger"></span>
                    </div> *@
                    <div class="form-group">
                        <label class="control-label">Brands</label>
                        <select asp-for="BrandId"> 
                            @foreach (var brand in ViewBag.BrandId)
                            {
                                <option value="@brand.Id">@brand.Name</option>
                            }
                        </select>

                        @* <select class="input js-input-select input--fluid" name="brands" data-placeholder="">
                            @foreach (var brand in ViewBag.BrandId)
                            {
                                <option value="@brand.Id">
                                    @brand.Name
                                </option>
                            }
                        </select> *@
                    </div>

                    <div class="form-group">
                        <label class="control-label">Categories</label>
                        <select asp-for="LnkProductCategories" multiple="multiple" data-placeholder="">
                        @* <select name="categories" class="input js-input-tags" multiple="multiple" data-placeholder=""> *@
                            @foreach (var category in ViewBag.CategoryId)
                            {
                                <option value="@category.Id">
                                    @category.Name
                                </option>
                            }
                        </select>
                    </div>

                    @foreach (var attr in ViewBag.AllAttr)
                    {
                        <div class="col-12 form-group form-group--lg mb-0">
                            <label class="form-label">@attr.Name</label>
                            <select asp-for="LnkProductAttributes" multiple="multiple" data-placeholder="">
                            @* <select name="@attr.Name" class="input js-input-tags" multiple="multiple" data-placeholder=""> *@
                                @foreach (var data in ViewData[attr.Name])
                                {
                                    <option value="@data.Id">
                                        @data.Name
                                    </option>
                                }
                            </select>
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="Img" class="control-label"></label>
                        <input class="form-control" type="file" name="file_upload" multiple="multiple" accept="image/png, image/jpeg" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</main>
