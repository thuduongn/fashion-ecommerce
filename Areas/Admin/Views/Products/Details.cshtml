                    </div>
                    <form class="add-product__form">
                        <div class="add-product__row">
                            <div class="add-product__slider" id="addProductSlider">
                                <div class="add-product__thumbs">
                                    <div class="add-product__thumbs-slider swiper-container">
                                        <div class="swiper-wrapper">
                                            @foreach (var img in ((List<string>)ViewBag.Img).Skip(1))
                                            {
                                                <div class="add-product__thumb swiper-slide">
                                                    <img class="add-product__thumb-image swiper-lazy" src="~/@img" alt="#">
                                                    <div class="add-product__lazy-preloader swiper-lazy-preloader"></div>
                                                </div>
                                            }

                                        </div>
                                    </div>
                                    <div class="add-product__thumbs-prev">
                                        <a class="add-product__thumbs-arrow add-product__thumbs-arrow--prev" href="#">
                                            <svg class="icon-icon-chevron">
                                                <use xlink:href="#icon-chevron"></use>
                                            </svg>
                                        </a>
                                    </div>
                                    <div class="add-product__thumbs-next">
                                        <a class="add-product__thumbs-arrow add-product__thumbs-arrow--next" href="#">
                                            <svg class="icon-icon-chevron">
                                                <use xlink:href="#icon-chevron"></use>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                                <div class="add-product__gallery">
                                    <div class="add-product__gallery-slider swiper-container">
                                        <div class="swiper-wrapper">
                                            @if (ViewBag.Img != null && ViewBag.Img.Count > 0)
                                            {
                                                <div class="add-product__gallery-slide swiper-slide">
                                                    <img class="add-product__gallery-image swiper-lazy" src="~/@ViewBag.Img[0]" alt="#">
                                                </div>
                                            }
                                            @* <div class="add-product__gallery-slide swiper-slide">
                                            <img class="add-product__gallery-image swiper-lazy" src="img/content/product/item-1.jpg" srcset="img/content/product/item-1.jpg 2x" alt="#">
                                            <div class="add-product__lazy-preloader swiper-lazy-preloader"></div>
                                            </div> *@

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="add-product__right">
                                <div class="row row--md">
                                    <div class="col-12 form-group form-group--lg">
                                        <label class="form-label">Product Name</label>
                                        <div class="input-group">
                                            <input asp-for="Name" class="input" readonly>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 form-group form-group--lg">
                                        <label class="form-label">Slug</label>
                                        <div class="input-group">
                                            <input asp-for="Slug" class="input" readonly>
                                            <span asp-validation-for="Slug" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 form-group form-group--lg">
                                        <label class="form-label">Abstract</label>
                                        <div class="input-editor">
                                            <textarea class="input" asp-for="Abstract" rows="4" cols="60" readonly></textarea>
                                        </div>
                                    </div>

                                    <div class="col-12 form-group form-group--lg">
                                        <label class="form-label">Description</label>
                                        <div class="input-editor">
                                            <textarea class="input" asp-for="Description" rows="4" cols="60" readonly></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 form-group form-group--lg">
                                        <label class="form-label">Price</label>
                                        <div class="input-group input-group--prepend">
                                            <div class="input-group__prepend">
                                                <span class="input-group__symbol">$</span>
                                            </div>
                                            <input asp-for="Price" class="input" type="number" readonly>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 form-group form-group--lg">
                                        <label class="form-label">Quantity</label>
                                        <div class="input-group">
                                            <input asp-for="Quantity" class="input" type="number" readonly>
                                        </div>
                                    </div>
                                    <div class="col-12 form-group form-group--lg">
                                        <label class="form-label">Brands</label>
                                        <div class="input-group input-group--append">
                                            <input name="brand" class="input" value="@ViewBag.Brand.Name" readonly>
                                            @* <select class="input js-input-select input--fluid" name="brands" data-placeholder="">
                                            @foreach (var brand in ViewBag.Brands)
                                            {
                                            <option value="@brand.Id">
                                            @brand.Name
                                            </option>
                                            }
                                            </select> *@
                                            @* <span class="input-group__arrow">
                                            <svg class="icon-icon-keyboard-down">
                                            <use xlink:href="#icon-keyboard-down"></use>
                                            </svg>
                                            </span> *@
                                        </div>
                                    </div>

                                    <div class="col-12 form-group form-group--lg mb-0">
                                        <label class="form-label">Categories</label>
                                        <select name="categories" class="input js-input-tags" multiple="multiple" data-placeholder="" disabled>
                                            @foreach (var category in ViewBag.Categories)
                                            {
                                                <option value="@category.Id" selected="selected" readonly>
                                                    @category.Name
                                                </option>
                                            }
                                        </select>
                                    </div>

                                    @foreach (var attr in ViewBag.AllAttr)
                                    {
                                        <div class="col-12 form-group form-group--lg mb-0">
                                            <label class="form-label">@attr.Name</label>
                                            <select name="@attr.Name" class="input js-input-tags" multiple="multiple" data-placeholder="" disabled>
                                                @foreach (var data in ViewData[attr.Name])
                                                {
                                                    <option value="@data.Id" selected="selected" readonly>
                                                        @data.Name
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    }
                                </div>
                                @* <div class="add-product__submit">
                                <div class="modal__footer-button">
                                <button class="button button--primary button--block" data-dismiss="modal" data-modal="#addProductSuccess">
                                <span class="button__text">Create</span>
                                </button>
                                </div>
                                <div class="modal__footer-button">
                                <a class="button button--secondary button--block" href="products.html"><span class="button__text">Cancel</span></a>
                                </div>
                                </div> *@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

