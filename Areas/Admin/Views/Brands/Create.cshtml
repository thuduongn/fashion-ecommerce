@model fashion.Data.Brand
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Custom_Layout.cshtml";

}


<main class="page-content">
    <div class="container">
        <h1>Create</h1>

        <div>
            <h4>Brand</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-area="Admin" asp-controller="Brands" asp-action="CreateBrand" method="POST" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input name="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input name="Description" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Img" class="control-label"></label>
                            <input name="Img" type="file" class="form-control" accept="image/png, image/jpeg" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Slug" class="control-label"></label>
                            <input name="Slug" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

    </div>
</main>