@* @model IEnumerable<fashion.Data.Cart>
 *@
@{
    ViewData["Title"] = "Checkout";
    decimal subtotal = 0;
}

<p>@ViewBag.error</p>

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Check Out</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Check Out</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Checkout Start -->
<div class="container-fluid pt-5">
    <div class="row">
            <div class="col-lg-6">
                <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" value=@ViewBag.Customer.Name>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Phone</label>
                        <input class="form-control" type="text" value=@ViewBag.Customer.Phone>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="text" value=@ViewBag.Customer.Email>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Location</label>
                        <input class="form-control" type="text" value=@ViewBag.Customer.Location>
                    </div>

                <div class="col-md-6 form-group">
                    <label>Note</label>
                    <input id="note-order" class="form-control" type="text" placeholder="Note">
                </div>
                    
                </div>
            </div>
            <div class="col-lg-6">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                </div>
                <div class="card-body">
                    <h5 class="font-weight-medium mb-3">Products</h5>
                    @foreach (var item in ViewBag.ListProductInCart)
                    {
                        <div class="d-flex justify-content-between">
                            <p>@item.Product.Name x @item.Quantity </p>
                            <p>$@item.Product.Price</p>
                        </div>
                        subtotal += (item.Product.Price * item.Quantity); 
                    }                    
                    <hr class="mt-0">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
                        <h6 class="font-weight-medium">@subtotal</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
                        <h5 class="font-weight-bold">$@(subtotal + 10)</h5>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <a id="place-order" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Place Order</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->